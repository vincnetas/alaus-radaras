<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
			font-weight: bold;
		}
		.logoText {
			font-size: large;
			text-align: center;
			width: 100%;
		}
		.platformLogo {
			margin: 8px 11px 3px 11px;
			width: 44px;
			height: 44px;
		}
		.panel {
			background-color: white;
			width: 200px;
			height: 84px;
			
		}
	</ui:style>
	<g:DecoratorPanel>
		<g:SimplePanel styleName="{style.panel}">
			<g:VerticalPanel>
				<g:HorizontalPanel width="100%">
					<g:Label styleName="{style.logoText}">TurÄ—k po ranka</g:Label>	
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Image styleName="{style.platformLogo}" url="/img/android.png" altText="Android"></g:Image>
					<g:Image styleName="{style.platformLogo}" url="/img/apple.png" altText="Apple"></g:Image>
					<g:Image styleName="{style.platformLogo}" url="/img/ovi.png" altText="Nokia"></g:Image>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:SimplePanel>
	</g:DecoratorPanel>
</ui:UiBinder> 