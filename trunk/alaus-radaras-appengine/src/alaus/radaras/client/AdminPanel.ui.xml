<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:alaus.radaras.client.ui"
	xmlns:p="urn:import:alaus.radaras.client.ui.panels" xmlns:f="urn:import:alaus.radaras.client.ui.filter" xmlns:radaras="urn:import:alaus.radaras.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.logo {
			margin: 15px;
		}
		
		.logoText {
			font-size: x-large;
			margin: 5px;
			font-weight: bold;
		}
	</ui:style>

	<g:TabLayoutPanel barUnit='EM' barHeight='3' width="100%" height="100%">
		<g:tab>
			<g:customHeader size='7'>
				<g:HorizontalPanel height="2em">
					<g:Label>Pubs</g:Label>
					<g:Button ui:field="addPubButton">Add</g:Button>
				</g:HorizontalPanel>				
			</g:customHeader>
			<g:ScrollPanel>
				<g:SimplePanel ui:field="pubsPanel"></g:SimplePanel>
			</g:ScrollPanel>
		</g:tab>
		<g:tab>
			<g:customHeader size='7'>
				<g:HorizontalPanel height="2em">
					<g:Label>Pubs</g:Label>
					<g:Button ui:field="addBeerButton">Add</g:Button>
				</g:HorizontalPanel>	
			</g:customHeader>
			<g:Label>baker</g:Label>
		</g:tab>
		<g:tab>
			<g:customHeader size='7'>
				<g:HorizontalPanel height="2em">
					<g:Label>Brands</g:Label>
					<g:Button ui:field="addBrandButton">Add</g:Button>
				</g:HorizontalPanel>	
			</g:customHeader>
			<g:Label>baker</g:Label>
		</g:tab>
		<g:tab>
			<g:customHeader size='7'>
				<g:HorizontalPanel height="2em">
					<g:Label>Import</g:Label>
					<g:Button>:)</g:Button>
				</g:HorizontalPanel>	
			</g:customHeader>
			<g:SimplePanel ui:field="importPanel">
				<r:Uploader></r:Uploader>
			</g:SimplePanel>
		</g:tab>	
		<g:tab>
			<g:customHeader size='7'>
				<g:HorizontalPanel height="2em">
					<g:Label>Aproovals</g:Label>
				</g:HorizontalPanel>	
			</g:customHeader>
			<g:SimplePanel>
				<radaras:ApprovalPanel></radaras:ApprovalPanel>
			</g:SimplePanel>
		</g:tab>			
	</g:TabLayoutPanel>
</ui:UiBinder> 