<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:alaus.radaras.client.ui"
	xmlns:p="urn:import:alaus.radaras.client.ui.panels" xmlns:f="urn:import:alaus.radaras.client.ui.filter">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>

	<g:DockLayoutPanel width="100%" height="100%">
		<g:north size="50">
			<r:CityPanel></r:CityPanel>
		</g:north>
		<g:south size="50">
			<g:Button>Add</g:Button>
		</g:south>

		<g:west size="300">
			<g:StackLayoutPanel ui:field="stackPanel">
				<g:stack>
					<g:header size='30'>Beer</g:header>
					<f:BeerFilter></f:BeerFilter>
				</g:stack>
				<g:stack>
					<g:header size='30'>Tag</g:header>
					<f:TagFilter></f:TagFilter>
				</g:stack>
				<g:stack>
					<g:header size='30'>Country</g:header>
					<f:CountryFilter></f:CountryFilter>
				</g:stack>
			</g:StackLayoutPanel>
		</g:west>
		<g:center>
			<p:MapPanel></p:MapPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 