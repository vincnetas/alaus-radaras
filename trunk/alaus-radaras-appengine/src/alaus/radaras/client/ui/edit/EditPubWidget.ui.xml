<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:alaus.radaras.client.ui.edit.suggest">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.label {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label styleName="{style.label}">Title</g:Label><g:TextBox ui:field="title" width="200px"></g:TextBox>
		<g:Label styleName="{style.label}">Beers</g:Label>		
		<g:VerticalPanel ui:field="beerPanel"></g:VerticalPanel>
		<e:BeerSuggestBox ui:field="beerSuggest"></e:BeerSuggestBox>
	</g:HTMLPanel>
</ui:UiBinder> 