<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:alaus.radaras.client.ui" xmlns:e="urn:import:alaus.radaras.client.ui.edit">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.pubTitle {
			font-size: larger;
			font-weight: bold;
			cursor: pointer;
			border-bottom-style: solid;
			border-bottom-width: 1px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label styleName="{style.pubTitle}" ui:field="title"></g:Label>				
		<g:Label>We are serving</g:Label>
		<g:VerticalPanel ui:field="beerPanel"></g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 