<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:alaus.radaras.client.ui.edit.suggest">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label>Title</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="title"></g:TextBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label>Brand</g:Label>
				</g:customCell>
				<g:customCell>
					<s:BrandSuggestBox ui:field="brand"></s:BrandSuggestBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label>Icon</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="icon"></g:TextBox>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label>Description</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextArea ui:field="description"></g:TextArea>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label>Tags</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextArea ui:field="tags"></g:TextArea>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 