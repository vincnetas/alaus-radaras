<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label>Title</g:Label><g:TextBox ui:field="title"></g:TextBox>
		<g:Label>Location</g:Label><g:Button ui:field="selectLocation">Map</g:Button>
		<g:Label>Country</g:Label><g:SuggestBox ui:field="country"></g:SuggestBox>
		<g:Label>City</g:Label><g:SuggestBox ui:field="city"></g:SuggestBox>
		<g:Label>Address</g:Label><g:TextBox ui:field="address"></g:TextBox>
		<g:Label>Phone</g:Label><g:TextBox ui:field="phone"></g:TextBox>
		<g:Label>Description</g:Label><g:TextArea ui:field="description"></g:TextArea>
		<g:Label>Homepage</g:Label><g:TextBox ui:field="homepage"></g:TextBox>
		<g:Label>Hours</g:Label><g:TextBox ui:field="hours"></g:TextBox>
		<g:Label>Tags</g:Label><g:TextBox ui:field="tags"></g:TextBox>
		<g:Label>Beers</g:Label><g:Button ui:field="selectBeer">Beer</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 