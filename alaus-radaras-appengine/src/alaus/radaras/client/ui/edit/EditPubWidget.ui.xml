<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:alaus.radaras.client.ui.edit.suggest">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.title {
			font-weight: bold;
			font-size: larger;
		}
		.label {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Label styleName="{style.title}" ui:field="title"></g:Label>
		<g:Label styleName="{style.label}">Beers</g:Label>		
		<g:VerticalPanel ui:field="beerPanel"></g:VerticalPanel>
		<e:BeerSuggestBox ui:field="beerSuggest"></e:BeerSuggestBox>
	</g:HTMLPanel>
</ui:UiBinder> 